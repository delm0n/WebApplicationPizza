@model List<string>
@{int index = 0;}

<h1>Выбрано @Model.Count пицц(ы)</h1>

<table class="table_block">
            <tr>
                <th>Название</th>
                <th></th>
            </tr>
            @foreach (string pizza in Model)
            { 
                
                    <tr>
                        <td>@pizza</td>
                        <td><a asp-action="pizza_change" asp-controller="home" asp-route-id="@index">Внести изменения</a></td>
                        <td><a asp-action="pizza_delete" asp-controller="home" asp-route-id="@index">Убрать из заказа</a></td>
                    </tr>
               index++;
            }
        </table>


    <div style="margin-top:20px; display: flex; flex-direction: column;">

                <form asp-controller="home" asp-action="pizza_order_two" method="post" style="margin-bottom:20px">
                     <input type="submit" value="Добавить пиццу"  class="button_place" />
                </form>

                <form asp-controller="home" asp-action="order_back" method="post">
                     <input style="background-color: #e74c36" type="submit" value="Назад"  class="button_place" />
                </form>

            </div>


