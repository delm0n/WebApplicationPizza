@model IEnumerable<WebApplication.Data.Entity.Addish>
@{
    string container = "";
}
<div class="panel_container">

    <table class="table_block">
            <tr>
                <th>Название</th>
                <th>Масса</th>
                <th>Цена</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
        {
            if (container == "" || container != @item.TypeAddish)
            {
                <tr style="background-color: white;">
                    <td colspan=4><h4 style="margin: 15px 0px 5px 15px;">@item.TypeAddish</h4></td>
                </tr>

                <tr>      
                    <td>@item.AddishName</td>      
                    <td>@item.Mass</td>      
                    <td>@item.Price</td>        
                    <td><a asp-action="addishes_reactive" asp-controller="home" asp-route-id="@item.AddishId">Убрать из меню</a></td>  
                </tr>

                container = @item.TypeAddish;
            }
            else
            {
                <tr>      
                    <td>@item.AddishName</td>      
                    <td>@item.Mass</td>      
                    <td>@item.Price</td>        
                    <td><a asp-action="addishes_reactive" asp-controller="home" asp-route-id="@item.AddishId">Убрать из меню</a></td>     
                </tr>

                container = @item.TypeAddish;
            }

               
            }
        </table>

    <div class="flex_wrapper">

        <form asp-controller="home" asp-action="addishes_panel_form" method="post">
                <input type="submit" value="Добавить"  class="button_place" />
            </form>

        <form asp-controller="home" asp-action="addishes_unactive" method="post">
                <input style="background-color: #e74c36" type="submit" value="Восстановить"  class="button_place" />
            </form>


    </div>

</div>
