@model WebApplication.Data.Entity.Addish;

                <form asp-controller="home" asp-action="add_new_addish" method="post" class="form_login">
                    
                    <div  class="form_el">
                        <label asp-for="AddishName"></label>
                        <input type="text" asp-for="AddishName" class="border-class"/>
                        <span asp-validation-for="AddishName"></span>
                    </div>

                    <div  class="form_el">
                        <label asp-for="TypeAddish"></label>
                        <div>
                            <select style="height: 29px;
    width: 192px;
    border-radius: 2px;
    font-weight: 400;
    color: #272f40;" asp-for="TypeAddish" required="required">
                              <option value="">Выберите тип</option>
                              <option value="Салаты">Салаты</option>
                              <option value="Горячее">Горячее</option>
                              <option value="Десерты">Десерты</option>
                              <option value="Напитки">Напитки</option>
                            </select>
                        </div>
                        <span asp-validation-for="TypeAddish"></span>
                    </div>

                    <div class="form_el">
                        <label asp-for="Mass"></label>
                        <input type="text" asp-for="Mass" class="border-class" pattern="[0-9]{2,}" title="Например: 10"/>
                        <span asp-validation-for="Mass"></span>
                    </div>

                    <div class="form_el">
                        <label asp-for="Price"></label>
                        <input type="text" asp-for="Price" class="border-class check_number" pattern="^\d*(\.\d{0,2})?$" title="Например: 123.45" />
                        <span asp-validation-for="Price"></span>
                    </div>

                    <div class="form_el">
            
                        <input type="submit" value="Добавить" />
                    </div>
                </form>

                @section ScriptPage {
                    <script src="~/js/PointPrice.js"></script>
                }